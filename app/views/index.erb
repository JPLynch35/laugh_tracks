<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="UTF-8">
  <h1>Comedians</h1>
</head>
<body>
  <header>
  <section>
    <%= "Average age: #{Comedian.average_age.to_i}" %></br></br>
    <% @comedians.each do |comedian| %>
      <%= comedian.name %>
      <div>Age: <%= comedian.age %></div>
      <div>Specials:</div>
      <% comedian.specials.each do |special| %>
          </ul><li><%= special.name %></li>
      <% end %>
      </br>
    <% end %>
  </section>
</body>
</html>
